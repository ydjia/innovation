<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>  
   <constant name="struts.i18n.encoding" value="UTF-8"/>
      <!-- 指定默认编码集 ，作用于HttpServletRequest的setCharacterEncoding（）和freemarker，vilocity的输出 -->
  <constant name="struts.configuration.xmlreload" value="true"/>
      <!-- 当struts配置文件修改时是否自动加载 -->
  <constant name="struts.devMode" value="true"/>
      <!-- 开发模式下打印详细的错误信息 -->
  <constant name="struts.ui.theme" value="xhtml"/>
  
  <package name="user" namespace="/test" extends="struts-default">
    <action name="aa" class="innovation.action.UserAction">
      <result>web.xml</result>
    </action>
    <action name="user_*" class="innovation.action.UserAction" method="{1}">
      <result name="success" type="redirectAction">user_queryAllUser.action</result>
      <result name="input">/WEB-INF/pages/login.html</result>
      <result name="userList">/userList.jsp</result>
      <result name="addUser">/userAdd.jsp</result>
      <result name="updateUser">/userUpdate.jsp</result>
    </action>
  </package>
</struts>    
